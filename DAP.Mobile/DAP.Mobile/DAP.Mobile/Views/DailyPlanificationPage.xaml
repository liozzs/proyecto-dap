<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="DAP.Mobile.Views.DailyPlanificationPage">
    <StackLayout Margin="10">

        <Label Text="Periodicidad diaria" />
        <Picker ItemsSource="{Binding Source = {x:Static data:DataProvider.DailyPeriodicities}}" ItemDisplayBinding="{Binding Descripcion}" SelectedItem="{Binding SelectedDailyPeriodicity}" />

        <Label Text="Hora de inicio" />
        <TimePicker Time="{Binding StartTime}" Format="HH:mm" />

        <StackLayout Margin="0, 10" Orientation="Horizontal" HorizontalOptions="Center" >
            <Button Text="Cancelar" Command="{Binding CancelCommand}" WidthRequest="150" />
            <Button Text="Siguiente" Command="{Binding NextCommand}" WidthRequest="150" />
        </StackLayout>
    </StackLayout>
</ContentPage>